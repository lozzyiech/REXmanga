{
    "manifest_version": 3,
    "name": "REXmanga",
    "version": "1.0",
    "description": "Расширение для сайта remanga.org",

    
    "content_scripts": [
        {
            "matches": ["https://remanga.org/*"],
            "js": ["content.js"]
        }
    ],
    
    "permissions": ["scripting", "unlimitedStorage"],

    "action": {
        "default_icon": {
            "16": "icons/icon16.png",
            "48": "icons/icon48.png",
            "128": "icons/icon128.png"
        }
    }
}